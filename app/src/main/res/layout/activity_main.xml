<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#222222"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RVC ULTIME Control Panel"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moteur RVC Actif"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_title" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#444444"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_hud_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Statut Temps RÃ©el (StabilitÃ©)"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_1" />

    <TextView
        android:id="@+id/tv_latency_hud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Latence Max: --ms"
        android:textColor="#00FF00"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hud_title"
        tools:text="Latence Max: 12ms" />

    <TextView
        android:id="@+id/tv_dsp_load_hud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Charge DSP: -- / ðŸŸ¢FP32"
        android:textColor="#FF9900"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_latency_hud"
        tools:text="Charge DSP: 45% / ðŸŸ¢FP32" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#444444"
        app:layout_constraintTop_toBottomOf="@id/tv_dsp_load_hud" />

    <TextView
        android:id="@+id/tv_model_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ModÃ¨le de Voix"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_2" />

    <TextView
        android:id="@+id/tv_current_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:text="ModÃ¨le Actif: (Charger un modÃ¨le)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_select_model"
        app:layout_constraintTop_toBottomOf="@id/tv_model_title" />

    <Button
        android:id="@+id/btn_select_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SÃ©lectionner"
        android:backgroundTint="#007ACC"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_model_title" />

    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#444444"
        app:layout_constraintTop_toBottomOf="@id/tv_current_model" />

    <TextView
        android:id="@+id/tv_pitch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pitch (TonalitÃ©)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_3" />

    <TextView
        android:id="@+id/tv_pitch_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[-12 / +12]"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_pitch_title"
        app:layout_constraintEnd_toStartOf="@id/tv_pitch_value"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tv_pitch_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00FF00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_pitch_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_pitch_title" />

    <SeekBar
        android:id="@+id/slider_pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="#007ACC"
        android:thumbTint="#007ACC"
        android:max="24"
        android:progress="12"
        android:min="-12"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pitch_title" />

    <TextView
        android:id="@+id/tv_naturality_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="NaturalitÃ© du Timbre"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slider_pitch" />

    <TextView
        android:id="@+id/tv_naturality_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[0% / 100%]"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_naturality_title"
        app:layout_constraintEnd_toStartOf="@id/tv_naturality_value"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tv_naturality_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00FF00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="100%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_naturality_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_naturality_title" />

    <SeekBar
        android:id="@+id/slider_naturality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="#007ACC"
        android:thumbTint="#007ACC"
        android:max="100"
        android:progress="100"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_naturality_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
